<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_page" >

    <RelativeLayout
        android:id="@+id/rlBottomTabTopbar"
        style="@style/topbar_bg" >

        <TextView
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="任务" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/flMainTabFragmentContainer"
        style="@style/match_match"
        android:background="#f5f5f5"
        android:layout_weight="1" >
        <ImageView
            android:id="@+id/iv_call"
            android:src="@drawable/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="60dp"
            android:layout_marginRight="20dp"/>
    </FrameLayout>

    <!--<View style="@style/divider_horizontal_1px_gray" />-->

    <LinearLayout
        style="@style/ll_horizontal_match_wrap"
        android:layout_height="@dimen/topbar_height"
        android:background="@color/topbar_bg_white" >

        <LinearLayout
            android:id="@+id/llBottomTabTab0"
            style="@style/bottom_tab_ll"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/ivBottomTabTab0"
                style="@style/bottom_tab_iv"
                android:src="@drawable/task_selector" />

            <TextView
                android:id="@+id/tvBottomTabTab0"
                style="@style/bottom_tab_tv"
                android:text="任务" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBottomTabTab1"
            style="@style/bottom_tab_ll"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/ivBottomTabTab1"
                style="@style/bottom_tab_iv"
                android:scaleType="fitXY"
                android:src="@drawable/event_selector" />

            <TextView
                android:id="@+id/tvBottomTabTab1"
                style="@style/bottom_tab_tv"
                android:text="事件" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/llBottomTabTab2"
            style="@style/bottom_tab_ll"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/ivBottomTabTab2"
                style="@style/bottom_tab_iv"
                android:scaleType="fitXY"
                android:src="@drawable/communication_selector" />

            <TextView
                android:id="@+id/tvBottomTabTab2"
                style="@style/bottom_tab_tv"
                android:text="通讯" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBottomTabTab3"
            style="@style/bottom_tab_ll"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/ivBottomTabTab3"
                style="@style/bottom_tab_iv"
                android:scaleType="fitXY"
                android:src="@drawable/search_selector" />

            <TextView
                android:id="@+id/tvBottomTabTab3"
                style="@style/bottom_tab_tv"
                android:scaleType="fitXY"
                android:text="查询" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>