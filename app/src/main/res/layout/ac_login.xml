<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_match"
    android:background="@drawable/dl_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        style="@style/wrap_wrap"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo" />
    <TextView
        android:text="南宁市·智能化人口疏散掩蔽系统"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="@dimen/min_distance_y"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/ll_span_login_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:padding="40dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/media_grid_spacing"
                android:layout_marginRight="@dimen/media_grid_spacing"
                android:background="@drawable/edittext_bg1"
                android:drawableLeft="@mipmap/icon_yonghuming"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="用户名"
                android:textColorHint="#74849d"
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="@color/white" />

        </RelativeLayout>

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/media_grid_spacing"
            android:layout_marginRight="@dimen/media_grid_spacing"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_bg1"
            android:drawableLeft="@mipmap/icon_password"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="密码"
            android:textColorHint="#74849d"
            android:inputType="textPassword"
            android:padding="16dp"
            android:singleLine="true"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/media_grid_spacing"
            android:layout_marginTop="30dp"
            android:layout_marginRight="@dimen/media_grid_spacing"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/login_btn_bg"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_huge" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>