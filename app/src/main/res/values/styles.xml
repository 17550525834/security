<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="LoginTheme" parent="android:Theme.NoTitleBar.Fullscreen">

        <!-- 闪屏背景，可用图片 -->
        <!--<item name="android:windowBackground">@drawable/dl_bg</item>-->
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="bottom_tab_ll" parent="ll_vertical_match_match">
        <item name="android:width">0dp</item>
    </style>

    <style name="bottom_tab_iv" parent="img_btn"></style>

    <style name="bottom_tab_tv" parent="text_micro">
        <item name="android:textColor">@color/blue_to_gray</item>
    </style>
    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
